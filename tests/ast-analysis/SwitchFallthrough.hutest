                    (markerLines ("__" ++ name ++ "__") thisSource)
             ++ map (assertNoIssue . atLine (mkKind name))
                    (markerLines ("__no_" ++ name ++ "__") thisSource)

mkKind = IssueKind "Lang.Php.Ast.Analysis.Reachability"

